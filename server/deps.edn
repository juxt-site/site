  ;; Ring for some utility code
  ring/ring-core {:mvn/version "1.9.1"}

  ;; Passwords
  crypto-password/crypto-password {:mvn/version "0.2.1"}

  ;; REPL highlighting
  mvxcvi/puget {:mvn/version "1.3.1"}

  ;; Required by OpenID Connect
