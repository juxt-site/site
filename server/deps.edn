   :sha "6722e5885039f31e28a14d2bd23f956dd3c1dde4"
   ;;:local/root "/home/mal/src/github.com/juxt/grab"
   }

  ;; JSON Schema support functions
  jinx/jinx
  {:git/url "https://github.com/juxt/jinx.git"
   :sha "68325edd1c4d5884d78e11f2a31d871a8512893d"}
